                            >
                                <IconReact
                                    class="social-tech group-hover:text-sky"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="JavaScript"
                                url="https://www.ecma-international.org/publications-and-standards/standards/ecma-262/"
                            >
                                <IconJavascript
                                    class="social-tech group-hover:text-yellow"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="Tailwind CSS"
                                url="https://www.tailwindcss.com/"
                            >
                                <IconTailwindCss
                                    class="social-tech group-hover:text-teal"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="Python"
                                url="https://python.org/"
                            >
                                <IconPython
                                    class="social-tech group-hover:text-blue"
                                />
                            </SocialCardChip>
                        </SocialCardTech>
                        <SocialCardLinks>
                            <SocialCardChip
                                text="jason@cattolabs.com"
                                url="mailto:jason@cattolabs.com"
                            >
                                <IconEmail
                                    class="social-tech group-hover:text-flamingo"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="pnxl"
                                url="https://github.com/pnxl"
                            >
                                <IconGithub
