                            </SocialCardChip>
                        </SocialCardRole>
                        <SocialCardTech>
                            <SocialCardChip
                                text="Rust"
                                url="https://www.rust-lang.org/"
                            >
                                <IconRust
                                    class="social-tech group-hover:text-peach"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="SolidJS"
                                url="https://www.solidjs.com/"
                            >
                                <IconSolid
                                    class="social-tech group-hover:text-sapphire"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="TypeScript"
                                url="https://www.typescriptlang.org/"
                            >
                                <IconTypescript
                                    class="social-tech group-hover:text-blue"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="Supabase"
                                url="https://supabase.com/"
                            >
                                <IconSupabase
                                    class="social-tech group-hover:text-green"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="UnoCSS"
                                url="https://www.unocss.com/"
                            >
                                <IconUnoCss
                                    class="social-tech group-hover:text-text"
                                />
                            </SocialCardChip>
                        </SocialCardTech>
                        <SocialCardLinks>
                            <SocialCardChip
                                text="vexcited@cattolabs.com"
                                url="mailto:vexcited@cattolabs.com"
                            >
                                <IconEmail
                                    class="social-tech group-hover:text-flamingo"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="vexcitedoff"
                                url="https://instagram.com/vexcitedoff"
                            >
                                <IconInstagram
                                    class="social-tech group-hover:text-pink"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="@vexcitedoff"
                                url="https://twitter.com/vexcitedoff"
                            >
                                <IconTwitter
                                    class="social-tech group-hover:text-sky"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="Vexcited"
                                url="https://github.com/vexcited"
                            >
                                <IconGithub
                                    class="social-tech group-hover:text-lavender"
                                />
