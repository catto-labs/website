                        </SocialCardLinks>
                    </SocialCardBase>
                    <SocialCardBase
                        img={PfpTrobo}
                        name="trobo"
                        username="@trobonox"
                        location="Bavaria, Germany"
                        role="CEO - Chief Executive Officer"
