                        </SocialCardRole>
                        <SocialCardTech>
                            <SocialCardChip text="Vue" url="https://vuejs.org/">
                                <IconVue
                                    class="social-tech group-hover:text-green"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="Astro"
                                url="https://astro.build/"
                            >
                                <IconAstro
                                    class="social-tech group-hover:text-peach"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="TypeScript"
                                url="https://www.typescriptlang.org/"
                            >
                                <IconTypescript
                                    class="social-tech group-hover:text-blue"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="Python"
                                url="https://python.org/"
                            >
                                <IconPython
                                    class="social-tech group-hover:text-blue"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="C# (and DotNet)"
                                url="https://dotnet.microsoft.com/languages/csharp"
                            >
                                <IconCsharp
                                    class="social-tech group-hover:text-purple"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="Java"
                                url="https://www.java.com/"
                            >
                                <IconJava
                                    class="social-tech group-hover:text-red"
                                />
                            </SocialCardChip>
                        </SocialCardTech>
                        <SocialCardLinks>
                            <SocialCardChip
                                text="trobo@cattolabs.com"
                                url="mailto:trobo@cattolabs.com"
                            >
                                <IconEmail
                                    class="social-tech group-hover:text-flamingo"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="trobo.tech"
                                url="https://discord.com/users/540898474288480256"
                            >
                                <IconDiscord
                                    class="social-tech group-hover:text-lavender"
                                />
                            </SocialCardChip>
                            <SocialCardChip
                                text="trobonox"
                                url="https://github.com/trobonox/"
                            >
                                <IconGithub
                                    class="social-tech group-hover:text-lavender"
                                />
                            </SocialCardChip>
                        </SocialCardLinks>
                    </SocialCardBase>
                </div>
            </section>
        </div>
    </main>
</Base>

<style>
    .tech-icon {
        @apply h-6 transition duration-500 ease-in-out;
    }

    .social-icon {
        @apply h-4 transition duration-[250ms] ease-in-out;
    }

    .social-tech {
        @apply my-auto w-6 transition duration-[250ms] sm:h-4;
    }

    @keyframes background-pan {
        from {
            background-position: 0% center;
        }

        to {
            background-position: -200% center;
        }
    }

    @keyframes star-scale {
        from,
        to {
            transform: scale(0);
        }

        50% {
            transform: scale(1);
        }
    }

    @keyframes star-rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(180deg);
        }
    }

    .cool-text {
        background: linear-gradient(
            to right,
            #b7bdf8,
            #c6a0f6,
            #f5bde6,
            #f0c6c6,
            #b7bdf8
        );
        background-size: 200%;

        animation: background-pan 2s linear infinite;

        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;

        position: relative;
    }

    .cool-text::selection {
        -webkit-text-fill-color: #181926;
    }
</style>
